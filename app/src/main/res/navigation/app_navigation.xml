<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.graduationproject.zakerly.intro.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/app_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_logInFragment"
            app:destination="@id/signInFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/app_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeStudentFragment"
            app:destination="@id/homeStudentFragment" />

    </fragment>

    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.graduationproject.zakerly.authentication.forgetpassword.ForgetPasswordFragment"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password">

        <action
            android:id="@+id/action_forgetPassword_fragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.graduationproject.zakerly.intro.onboarding.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_logInFragment"
            app:destination="@id/signInFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/app_navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileStudentFragment"
        android:name="com.graduationproject.zakerly.navigation.profilestudent.ProfileStudentFragment"
        android:label="ProfileStudentFragment"
        app:launchSingleTop="true"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_profile_student" />


    <fragment
        android:id="@+id/signInFragment"
        android:name="com.graduationproject.zakerly.authentication.signIn.SignInFragment"
        android:label="SignInFragment"
        app:launchSingleTop="true"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment" />
        <action
            android:id="@+id/action_signInFragment_to_homeStudentFragment"
            app:destination="@id/homeStudentFragment" />
    </fragment>


    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.graduationproject.zakerly.authentication.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <argument
            android:name="authType"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="uid"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="firstName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="lastName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_signUpFragment_to_homeStudentFragment"
            app:destination="@id/homeStudentFragment" />
    </fragment>

    <action
        android:id="@+id/navigate_to_student_profile"
        app:destination="@id/profileStudentFragment" />
    <action
        android:id="@+id/navigate_to_student_home"
        app:destination="@id/homeStudentFragment" />

    <action android:id="@+id/navigate_to_favorite"
        app:destination="@id/favoriteFragment"/>

    <fragment
        android:id="@+id/homeStudentFragment"
        android:name="com.graduationproject.zakerly.navigation.homestudent.HomeStudentFragment"
        android:label="fragment_home_student"
        tools:layout="@layout/fragment_home_student" />

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.graduationproject.zakerly.navigation.favorites.FavoritesFragment"
        android:label="favorite_fragment"
        tools:layout="@layout/fragment_favorites" />

</navigation>